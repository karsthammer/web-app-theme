<% columns.each do |column| %>
	<%%= f.input :<%= column.name %>, :as => :<%= column.field_type.to_s == "text_field" ? "string" : column.field_type %>, :label_html => { :class => :label }, :input_html => { :class => '<%= column.field_type %>' } %>
<%- end -%>

<div class="group navform wat-cf">
  <button class="button" type="submit">
